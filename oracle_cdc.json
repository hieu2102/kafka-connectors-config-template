{
    "name": "oracle_cdc",
    "config": {
        "connector.class": "io.confluent.connect.oracle.cdc.OracleCdcSourceConnector",
        "errors.log.include.messages": "true",
        "oracle.password": "${PASSWORD}",
        "redo.log.consumer.bootstrap.servers": "confluent-kafka-01:9092,confluent-kafka-02:9092",
        "topic.creation.default.partitions": "3",
        "transforms": "smt", 
        "redo.log.corruption.topic": "${HISTORY_TOPIC}_corrupt",
        "emit.tombstone.on.delete": "true",
        "oracle.date.mapping": "timestamp",
        "enable.large.lob.object.support": "true",
        "topic.creation.default.replication.factor": "3",
        "lob.topic.name.template": "${databaseName}.${schemaName}.${tableName}.${columnName}",
        "topic.creation.redo.retention.ms": "-1",
        "errors.log.enable": "true",
        "key.converter": "io.confluent.connect.avro.AvroConverter",
        "key.template": "${primaryKeyStruct}",
        "errors.retry.timeout": "5",
        "oracle.server": "${ORACLE_HOSTNAME}",
        "snapshot.threads.per.task": "1",
        "topic.creation.redo.cleanup.policy": "compact",
        "topic.creation.groups": "redo",
        "value.converter.schema.registry.url": "http://confluent-schema-01:8081",
        "start.from": "snapshot",
        "name": "oracle_cdc",
        "errors.tolerance": "none",
        "numeric.mapping": "best_fit",
        "max.batch.size": "10000",
        "redo.log.topic.name": "${HISTORY_TOPIC}",
        "oracle.sid": "${ORACLE_SID}",
        "table.topic.name.template": "${databaseName}.${schemaName}.${tableName}",
        "tasks.max": "1",
        "topic.creation.redo.partitions": "1",
        "producer.override.batch.size": "64000",
        "transforms.smt.type": "com.github.cjmatta.kafka.connect.smt.InsertUuid$Key",
        "behavior.on.unparsable.statement": "log",
        "connection.pool.max.size": "20",
        "value.converter": "io.confluent.connect.avro.AvroConverter",
        "record.buffer.mode": "database",
        "topic.creation.redo.replication.factor": "3",
        "topic.creation.default.cleanup.policy": "delete",
        "oracle.port": "1521",
        "errors.retry.delay.max.ms": "30000",
        "oracle.service.name": "${ORACLE_SERVICE_NAME}",
        "oracle.username": "${db_user}",
        "behavior.on.dictionary.mismatch": "log",
        "snapshot.row.fetch.size": "10000",
        "table.inclusion.regex": "${TABLE_NAME}",
        "key.converter.schema.registry.url": "http://confluent-schema-01:8081"
    }
}
